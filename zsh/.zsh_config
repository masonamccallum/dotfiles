alias vim="nvim"

if [ -d  ~/spack ]; then
    	. ~/spack/share/spack/setup-env.sh
	if [ -d  ~/spack/var/spack/environments/dev-env ]; then
		spack env activate dev-env
	else
		echo "no env dev-env"
	fi
else
	echo "Error: no dir ~/spack"
fi

[ -z "$TMUX" ] &&  { tmux attach || exec tmux new-session;}
source <(fzf --zsh)
